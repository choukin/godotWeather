<!--index.wxml-->
<view class="bg" style='background-image:url({{bgImgUrl}})'></view>
<view class="container">
<!-- 用户信息 -->
  <view class='userinfo'>
    <open-data type="userAvatarUrl" class="userinfo-avatar"></open-data>
    <text>{{greeting}}</text>
    <open-data type="userNickName" ></open-data>
  </view>
<!-- 实时天气 -->
  <view class="now">
    <view class='now-position'>
      <text></text>
      <image></image>
    </view>

    <view class='now-temp'>
      <text class="now-temp-num"></text>
      <text>℃</text>
    </view>
    <view class='now-cond'>
      <image src=''></image>
      <text>{{}}</text>
    </view>

    <view class='now-items'>
      <view class="now-items-left">
        <view>级</view>
        <view>湿度</view>
      </view>
      <view class="now-items-right">
        <view>大气压</view>
        <view>降水量</view>
      </view>      
    </view>

    <view class='now-time'>
      <text>更新于</text>
    </view>
  

    <view class="hourly-container">
      <view></view>
      <swiper>
         <block>
         <swiper-item></swiper-item>
         </block>
      </swiper>
    </view>
    <!-- 预测天气 -->
    <view class="forecast-container">
      <view class="forecast-title">近三天预报</view>
      <view class="forecast">
        <view class='forecast-column'>
          <view class="forecast-day"></view>
          <block>
            <view></view>
            <view></view>
            <view></view>
            <view></view>
            <view></view>
            <view></view>
            <view></view>
          </block>
        </view>
      </view>
    </view>

    <!-- 生活指数 -->
    <view class="lifestyle-container">
      <view class='lifestyle-title'>生活指数</view>
      <view class="lifestyle">
        <block>
          <view>
            <view></view>

          <view>
            <view></view>
            <view></view>
          </view>
          </view>
        </block>
      </view>
    </view>
  </view>
<!-- copyright -->
  <view class='copyright'>
     <text>copy by choukin</text>
     <text>,api by heweather</text>
  </view>
</view>

